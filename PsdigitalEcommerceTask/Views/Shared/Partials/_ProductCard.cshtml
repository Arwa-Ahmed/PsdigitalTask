@model PsdigitalEcommerceTask.Models.Product
<div class="col-md-4 col-lg-3 d-flex align-items-stretch">
    <div class="card shadow-sm" style="width: 18rem;">
        <img src="/Images/Product/@Model.Image" class="card-img-top" alt="@Model.Title">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Price <span class="currency">EGP</span></p>
            @Html.ActionLink("Add To Cart", "AddToCart","Cart", new { id = Model.Id}, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>