@model PsdigitalEcommerceTask.ViewModels.CartViewModel

@{
    ViewBag.Title = "Cart";
}
<section class="pt-5 pb-5">
    <div class="container">
        <div class="row w-100">
            <div class="col-lg-12 col-md-12 col-12">
                <h3 class="display-5 mb-2 text-center">Shopping Cart</h3>
                <hr />
                <h6 class="mb-5 text-center">
                    <i class="text-info font-weight-bold" id="cart-count">@Model.ItemsCount</i> items in your cart
                </h6>
                <table id="shoppingCart" class="table table-condensed table-responsive">
                    <thead>
                        <tr>
                            <th width="60%">Product</th>
                            <th width="20%">Price</th>
                            <th width="10%">Quantity</th>
                            <th width="10%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Carts.Count() > 0)
                        {
                            foreach (var Item in Model.Carts)
                            {
                                <tr id="row-@Item.Id" data-id="@Item.Id">
                                    <td data-th="Product">
                                        <div class="row">
                                            <div class="col-md-3 text-left">
                                                <img src="~/Images/Product/@Item.Product.Image" alt="" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
                                            </div>
                                            <div class="col-md-9 text-left mt-sm-2">
                                                <h4>@Item.Product.Title</h4>
                                            </div>
                                        </div>
                                    </td>
                                    <td data-th="Price">@Item.Product.Price</td>
                                    <td data-th="Quantity">
                                        <input type="number" class="form-control form-control-md text-center item-quantity"  id="item-count-@Item.Id" value="@Item.Quantity">
                                    </td>
                                    <td class="actions" data-th="">
                                        <div class="text-right">
                                            <a class="btn btn-danger btn-md mb-2" id="DeleteCartItem" data-id="@Item.Id">
                                               Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                            }

                        }
                        else
                        {
                            <tr>
                                <td>No Products</td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="float-right text-center">
                    <h4>Subtotal:</h4>
                    <h1 id="Subtotal">@Model.SubTotal</h1>
                </div>
            </div>
        </div>
        <div class="row mt-4 d-flex align-items-center">
            <div class="col-sm-12 order-md-2 text-center">
                <a href="#" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">Checkout</a>
            </div>
        </div>
    </div>
</section>

