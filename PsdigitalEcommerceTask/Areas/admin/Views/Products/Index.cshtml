@model IEnumerable<PsdigitalEcommerceTask.Models.Product>

@{
    ViewBag.Title = "Index";
}
@using NonFactors.Mvc.Grid;

@(
Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Title).Titled("Title");
        columns.Add(model => model.Price).Titled("Price");
        columns.Add().Encoded(false).RenderedAs(d =>
        Html.Raw("<a data-toggle='modal' data-target='.bs-details-modal-lg' href='/admin/Product/Details/" + d.Id + "'><span data-bs-toggle='tooltip' data-bs-placement='top' title='More Details' aria-hidden='true'><i class='fa-solid fa-circle-info'></i></span></a>"));
        columns.Add().Encoded(false).RenderedAs(d =>
        Html.Raw("<a data-toggle='modal' data-target='.bs-details-modal-lg' href='/admin/Product/Edit/" + d.Id + "'><span data-bs-toggle='tooltip' data-bs-placement='top' title='Edit' aria-hidden='true'><i class='fa-solid fa-pen-to-square'></i></span></a>"));
        columns.Add().Encoded(false).RenderedAs(d =>
        Html.Raw("<a href='/admin/Product/Archive/" + d.Id + "?r=" + @Context.Request.Path + "'><span data-bs-toggle='tooltip' data-bs-placement='top' title='Archive' aria-hidden='true'><i class='fa-solid fa-box-archive'></i></span></a>"));
    })
    .Empty("No data found")
    .Filterable()
    .Sortable()
    .Pageable()
)
</table>
